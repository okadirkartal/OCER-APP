@using Application.Core.Models
@model Invoice

@if (Model != null)
{
    <table class="table table-striped table-bordered table-responsive table-condensed table-hover">
        <tr>
            <th>Invoice Id</th>
            <th>Invoice Date</th>
            <th>Equipment Type</th>
            <th>Equipment Name</th>
            <th>Rental Day</th>
            <th>Rental Fee</th>
            <th>Remove</th>
        </tr>


        @foreach (var item in Model.Equipments)
        {
            <tr>
                <td>@item.InvoiceId</td>
                <td>@item.InvoiceDate</td>
                <td>@item.EquipmentType</td>
                <td>@item.EquipmentName</td>
                <td>@item.EquipmentRentalDay</td>
                <td>@item.EquipmentRentalFee â‚¬</td>
                <td>
                    <a href="/Home/RemoveEquipment/@item.EquipmentId">[ Remove ]</a>
                </td>
            </tr>
        }
        <tr>
            <td colspan="6">
                <b>Loyalt Point</b>
            </td>
            <td>
                <b>@Model.LoyaltPoint</b>
            </td>
        </tr>

        <tr>
            <td colspan="6">
                <b>Total Fee</b>
            </td>
            <td>
                <b>@Model.TotalPrice</b>
            </td>
        </tr>


        <tr>
            <td colspan="6">
                <b></b>
            </td>
            <td>
                <b>@Html.ActionLink("Download Report", "DownloadReport", "Home")</b>
            </td>
        </tr>
    </table>
}
else
{
    <div>There is no reports</div>
}