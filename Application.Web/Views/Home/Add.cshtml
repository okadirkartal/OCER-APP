@using Application.Core.Models.ViewModels
@model UserEquipmentViewModel

<form id="editForm" method="post" asp-action="Add" asp-controller="Home">

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()

    <table class="table table-striped table-bordered table-responsive table-condensed table-hover">
        <tr>
            <td>Equipment Type</td>
            <td>@Html.LabelForModel(Model.EquipmentTypeName)</td>
        </tr>

        <tr>
            <td>Equipment Name</td>
            <td>@Html.LabelForModel(Model.EquipmentName)</td>
        </tr>
         

        <tr>
            <td>Rent Day</td>
            <td>@Html.TextBoxFor(model => model.UserRentalDay, new { maxlength = 10 })</td>
        </tr>

        <tr>
            <td colspan="3" align="center">
                <button class="btn btn-inverse" type="submit">Add To Card</button>
            </td>
        </tr>

    </table>

    @Html.HiddenFor(model => model.PreDefinedDay)
    @Html.HiddenFor(model => model.EquipmentId)
    @Html.HiddenFor(model => model.EquipmentTypeId)

    @Html.HiddenFor(model => model.EquipmentTypeName)

    @Html.HiddenFor(model => model.EquipmentName)
</form>