@using Application.Core.Models.ViewModels
@model IEnumerable<UserEquipmentViewModel>


<table align="right">
    <tr>
        <td>
            <div class="cardItem">Your Cards (@ViewBag.EquipmentCount)</div>
        </td>
        <td style="width: 30px;"></td>
        <td>
            <div>
                <a href="/Home/Report">[Generate Report]</a>
            </div>
        </td>
    </tr>
</table>
@if (Model!=null)
{
    <table class="table table-striped table-bordered table-responsive table-condensed table-hover">
        <tr>
            <th>Equipment Id</th>
            <th>Equipment Type</th>
            <th>Equipment Name</th>
            <th>Minimum Rental Day</th>
            <th>Edit</th>
        </tr>

        @foreach (UserEquipmentViewModel item in Model)
        {
            <tr>
                <td>@item.EquipmentId </td>
                <td>@item.EquipmentTypeName</td>
                <td>@item.EquipmentName</td>
                <td>@(item.MinimumRentalDay == 0 ? "Unlimited" : item.MinimumRentalDay.ToString())</td>
                <td>@Html.ActionLink("Add To Cart", "Add", "Home", new {equipmentId = @item.EquipmentId})</td>

            </tr>
        }


    </table>
}
else
{
    <div>There is no stocks</div>
}